@model SaveTime.Web.Admin.Modules.Company.ViewModel.CompanyViewModel

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-7">
        <h2>Companies</h2>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CreateCompany.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateCompany.City)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Companies)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        <a data-id="@item.Id" class="company-details">Details</a>|
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-lg-5">
        @Html.Partial("_CreateCompany")
    </div>
</div>
<div class="row" id="companyDetails">

</div>
@section scripts{
<script>
    $(".company-details").on("click", function () {
        $("#companyDetails").load("@Url.Action("Details", "Company")/" + $(this).attr("data-id"));
    });
</script>
}
